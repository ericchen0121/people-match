template(name='contestTitle')
  div(class='col-xs-24')
    div(class='row')
      h1(id='contest-title' class='col-xs-16') #{contestName}
      h3(id='contest-date' class='col-xs-8') Contest Starts this {{momentify starts}}
    div(class='row')
      h4(id='contest-information') Entries: #{entries} / #{size}   Entry Fee: $#{entryFee}   Prize: $#{prizes} #{prizeFormat}

template(name='contestSlateContainer')
  div(class='col-xs-24')
    div(class='row')
      each slate
        div(class='col-xs-2') #{gameName} {{momentify starts 'shortTime'}}

template(name='contestLineupContainer')
  div(class='contestLineupContainer col-xs-24')
    div(class='row')
      div(class='col-xs-12')
        h2 Available Players
        div(class='row player-list-table-position-filters')
          div(class='col-xs-2 position-filter') All
          div(class='col-xs-2 position-filter') QB
          div(class='col-xs-2 position-filter') RB
          div(class='col-xs-2 position-filter') WR
          div(class='col-xs-2 position-filter') TE
          div(class='col-xs-2 position-filter') K
          div(class='col-xs-2 position-filter') D
          div(class='col-xs-6-offset-4') SEARCH HERE
        div(class='row player-list-table-header')
          div(class='col-xs-8') Name
          div(class='col-xs-2') FPPG
          div(class='col-xs-2') Played
          div(class='col-xs-5') Game
          div(class='col-xs-2') Salary
          div(class='col-xs-2')
        div(id='player-list-table-container' class='row')
          div(id='player-list-table' class='col-xs-24')
            each availablePlayers
              div(class='row player-list-item size-13')
                div(class='col-xs-2 player-position vAlign') #{position}
                div(class='col-xs-6 player-name vAlign') #{full_name}
                div(class='col-xs-2 player-fppg vAlign') 12.3
                div(class='col-xs-2 player-played vAlign') 13
                div(class='col-xs-5 player-slate vAlign') CIN @ PIT
                div(class='col-xs-2 player-salary vAlign') $4,500
                if inCurrentLineup
                  div(class='col-xs-2 col-xs-push-1 lineup-player-remove vAlign')
                    i(class="fa fa-minus-circle fa-2x")
                else
                  div(class='col-xs-2 col-xs-push-1 lineup-player-add vAlign')
                    i(class="fa fa-plus-circle fa-2x")
      div(class='col-xs-12')
        div(class='row')
          div(class='col-xs-10')
            h2 Your Lineup
          div(class='col-xs-2')
          div(class='col-xs-6')
            h2 $#{salaryRemaining}
          div(class='col-xs-6')
            h2 $#{salaryRemainingAvg}
        div(class='row lineup-table')
          div(class='col-xs-24')
            each currentLineup
              if espn_id
                div(class='row lineup-player-selection size-13')
                  div(class='col-xs-4 lineup-player-image vAlign')
                    img(class='player-photo' src= "{{ playerImageESPN espn_id = espn_id espn_size = 'micro'}}")
                  div(class='col-xs-2 lineup-player-position vAlign') #{position}
                  div(class='col-xs-6 lineup-player-name vAlign') #{full_name}
                  div(class='col-xs-2 lineup-player-salary vAlign') $4,500
                  div(class='col-xs-2 col-xs-push-2 lineup-player-remove vAlign')
                    i(class="fa fa-minus-circle fa-2x")
              else
                div(class='row lineup-player-selection size-13')
                  div(class='col-xs-4 lineup-player-image vAlign')
                    img(class='player-photo-anonymous' src='/images/anonymous_player.png')
                  div(class='col-xs-8 lineup-player-position vAlign')
                    span #{this}
                    span(class='lineup-empty-spot') ADD PLAYER
            div(class='row lineup-clear-all-selections size-12')
              div(class='col-xs-6 col-xs-push-18 ')
                i(class="fa fa-minus-circle fa-2x size-13")
                span Clear All
            div(class='row lineup-player-enter')
              div(class='col-xs-6 col-xs-push-18')
                div(class='btn btn-default btn-lg contest-entry') Enter

