          option(value='12') 12
          option(value='13') 13
          option(value='14') 14
          option(value='15') 15
          option(value='16') 16
          option(value='17') 17
        div(class='btn btn-sm btn-default total-score-to-entries-week-all') Score Week
      div(class='col-md-3')
        h4 Step 6. Rank Entries
        select(id='rank-entries-sport-select')
          option(value='NFL') NFL Week
        select(id='rank-entries-schedule-select')
          option(value='1') 1
