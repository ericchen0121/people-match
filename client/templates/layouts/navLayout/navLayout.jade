template(name='navLayout')
  div(class='container-fluid')
    nav(class="navbar navbar-default navbar-thin-height" role="navigation")
      div(class="navbar-header")
        a(class="navbar-brand" href="{{ pathFor 'lobbyLayout' }}")
          img(src='/images/icon.jpg')

      //- !-- Collect the nav links, forms, and other content for toggling --
      div
        ul(class="nav navbar-nav")
          li
            a(href="{{ pathFor 'lobbyLayout' }}" class="{{ isActiveRoute regex='lobbyLayout' }}") Lobby
          li
            a(href="{{ pathFor 'chatterLayout' }}" class="{{ isActiveRoute regex='chatterLayout' }}") Chatter
          li
            a(href="{{ pathFor 'nflPlayersListLayout' }}" class="{{ isActiveRoute regex='nflPlayersListLayout' }}") Players
          li
            a(href="{{ pathFor 'upcomingContestListLayout' }}" class="{{ isActiveRoute regex='upcomingContestListLayout' }}") Upcoming
          li
            a(href="{{ pathFor 'liveContestListLayout' }}" class="{{ isActiveRoute regex='liveContestListLayout' }}") Live
          li
            a(href="{{ pathFor 'historyContestListLayout' }}" class="{{ isActiveRoute regex='historyContestListLayout' }}") History
          li(class="dropdown")
            a(href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false") Admin
              span(class="caret")
            ul(class="dropdown-menu" role="menu")
              li
                a(href="{{ pathFor 'fixtureCreateLayout' }} ") Create Fixtures
              li
                a(href="{{pathFor 'contestCreateLayout' }}") Create Contests
        ul(class="nav navbar-nav navbar-right")
          div(class="login-block")
            if user
              +avatarImage
          div(class="login-block")
            +login
    div(id='globalContainer' class='row')
      +yield
