template(name='upcomingContestListContainer')
  div(class='upcoming-contest-list')
    div(class='col-md-24')
      div(class='row')
        h1(id='upcoming-contest-title' class='col-md-16') Upcoming Contests
      div(class='row')
        h4(class='col-md-8') You have #{ upcomingEntriesCount } contest entries upcoming.
      div(class='row')
        h3(class='col-md-2') Entry
        h3(class='col-md-6') Contest
        h3(class='col-md-16') Players
      +each upcomingContests
        div(class='row')
          div(class='col-md-2') 
            a(href="{{pathFor 'entryLayout'}}") 
              i(class="fa fa-money pointer") 
              span $#{entryFee}
          div(class='col-md-6 title') 
            a(href="{{pathFor 'entryLayout'}}") #{contestName}
          div(class='col-md-16 size-9')
            +entryViewMini