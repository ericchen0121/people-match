template(name="contestModal")
  div(class='modal fade' id='contestModal-#{_id}')
    div(class="modal-dialog")
    div(class="modal-content")
      div(class="modal-header")
        h2(class="modal-title" id="exampleModalLabel") #{ contestName }
        h6
          span Entry Fee: $#{ entryFee }  |       
          span Entries: #{ entryCount } / #{ entrySize }   |       
          span Prizes: $#{ prizes }  |
          span {{#if guaranteedPrizes }}Guaranteed Payouts {{/if}}
      div(class="modal-body")
        ul(class="nav nav-tabs")
          li(role="presentation")
            a(data-target='#info' class='active') Info
          li(role="presentation")
            a(data-target='#prizes') Prizes
        div(class='tab-content')
          div(role="tabpanel" class='tab-pane active' id='info')
            //- attribute of contest obj
            +each fixture.events
              div #{ away } @ #{ home } {{ momentify startsAt }}
          div(role="tabpanel" class='tab-pane' id='prizes') #{ readablePrizePayouts }
      div(class="modal-footer")
        a(class="btn btn-primary" data-dismiss="modal") Close
        a(class="btn btn-default" href='/contest/#{ _id }/draftteam') Enter
